<form
  class="p-3"
  method="post"
  action="/user/dash/addpost"
  enctype="multipart/form-data"
>
  <div class="d-flex justify-content-between mb-3">
    <label for="inputEmail3" class="col-form-label post-text">Username</label>
    <div class="w-75 ms-2">
      <input
        type="text"
        readonly
        class="form-control text-center"
        id="inputEmail3"
        value={{username}}
      />
    </div>
  </div>
  <div class="mb-3 d-flex">
    <input
      class="form-control"
      type="file"
      name="img-post"
      id="formFile"
      accept="image/*"
    />
  </div>
  <div class="d-flex flex-column mb-2">
    <label for="inputPassword3" class="col-form-label post-text">Caption</label>
    <div class="">
      <input
        type="text"
        class="form-control"
        id="inputPassword3"
        autocomplete="off"
        name="caption"
      />
    </div>
  </div>

  <div class="form-floating mt-3">
    <textarea
      autocomplete="off"
      class="form-control"
      placeholder="Leave a comment here"
      id="floatingTextarea2"
      style="height: 150px"
      name="comments"
    ></textarea>
    <label for="floatingTextarea2" class="post-text">Comments</label>
  </div>
  <button type="submit" class="btn mt-3">Post</button>
</form>