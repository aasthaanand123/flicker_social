<!-- Modal -->
<div
  class="modal fade"
  id="modal-{{post._id}}"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id={{post._id}}>{{post.caption}}</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body d-flex flex-wrap p-0">
        <div
          class="modal-img-wrapper w-100 d-flex justify-content-center mb-2 p-5"
        >
          <img src={{post.imgurl}} alt="image in post" class="w-75" />
        </div>
        <div class="modal-content-wrapper pt-2">
          <div class="modal-inner p-3"><div>{{post.description}}</div></div>
          <div class="modal-inner p-3">
            <div><div class="comments">Likes:
              </div>{{post.likes}}</div>
            <div><div class="comments">Dislikes:
              </div>{{post.dislikes}}</div>
            {{#if post.comments}}
              <div class="comments">Comments:</div>
              {{#each post.comments as |comment|}}
                <div>
                  <div>{{comment.comment}}</div>
                  <div>{{comment.userid.username}}</div>
                </div>
              {{/each}}
            {{/if}}
          </div>

        </div>

      </div>
    </div>

  </div>
</div>